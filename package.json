{
  "name": "surfing-game",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "packageManager": "npm@10.9.3",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run typecheck && vite build",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:smoke": "playwright test tests/smoke.spec.js",
    "test:unit": "vitest run",
    "test:perf": "vitest run --config vitest.perf.config.ts",
    "test:visual:game": "playwright test --config=playwright.visual.config.js packages/visual-regression-testing-viewer-react-application/src/",
    "test:visual:viewer": "playwright test --config=playwright.stories.config.js",
    "test:all": "turbo run test:smoke test:unit test:visual:game test:visual:viewer",
    "test:affected": "turbo run test --filter=...[origin/master]",
    "test:visual:game:force": "playwright test --config=playwright.visual.config.js packages/visual-regression-testing-viewer-react-application/src/",
    "test:visual:viewer:force": "playwright test --config=playwright.stories.config.js",
    "lint": "eslint packages/",
    "lint:fix": "eslint packages/ --fix",
    "lint:md": "markdownlint '**/*.{md,mdx}' --ignore node_modules",
    "lint:md:fix": "markdownlint '**/*.{md,mdx}' --ignore node_modules --fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,css}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,js,jsx,json,css}\"",
    "test:e2e": "playwright test",
    "check:no-js": "bash scripts/check-no-js.sh",
    "check:dead-code": "npx knip",
    "check:dead-code:json": "npx knip --reporter json",
    "check:duplicates": "npx jscpd packages/ --min-lines 5 --min-tokens 50",
    "check:duplicates:report": "npx jscpd packages/ --reporters html,console --output ./jscpd-report --min-lines 5",
    "stories": "vite --config vite.stories.config.ts",
    "stories:build": "vite build --config vite.stories.config.ts",
    "test:stories": "npm run test:visual:viewer:force",
    "test:visual:headless": "npm run reset:visual && playwright test --config=playwright.visual.config.js",
    "test:visual:headed": "npm run reset:visual && playwright test --config=playwright.visual.config.js --headed",
    "test:visual:update:headless": "npm run reset:visual:all && playwright test --config=playwright.visual.config.js --update-snapshots",
    "test:visual:update:headed": "npm run reset:visual:all && playwright test --config=playwright.visual.config.js --update-snapshots --headed",
    "reset:visual": "bash -c 'rm -rf tests/visual/results tests/visual/report test-results/.last-run.json && mkdir -p tests/visual/results tests/visual/report'",
    "reset:visual:all": "bash -c 'rm -rf tests/visual/results tests/visual/report tests/visual/snapshots test-results/.last-run.json && find packages/visual-regression-testing-viewer-react-application/src -name \"*.visual.spec.ts\" -execdir rm -f ./*.png \\; && mkdir -p tests/visual/results tests/visual/report'",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "gifenc": "^1.0.3",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.46.0",
    "playwright": "^1.57.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.7.2",
    "tsx": "^4.20.6",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "@mdx-js/react": "^3.1.1",
    "@mdx-js/rollup": "^3.1.1",
    "@vitejs/plugin-react": "^5.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-tooltip": "^5.30.0"
  }
}
