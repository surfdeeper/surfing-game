{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "test:unit": {
      "dependsOn": ["test:smoke"],
      "cache": true
    },
    "test:smoke": {
      "cache": true
    },
    "test:visual": {
      "dependsOn": ["test:unit"],
      "cache": true,
      "outputs": ["stories/**/*.png"]
    }
  }
}
