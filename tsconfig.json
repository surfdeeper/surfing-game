{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": false,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "types": ["vite/client", "node"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["packages/core/src/*"],
      "@stories/*": ["packages/visual-regression-testing-viewer-react-application/src/*"],
      "@surf/core": ["packages/core/src/index.ts"],
      "@surf/core/*": ["packages/core/*"],
      "@surf/render": ["packages/render/src/index.ts"],
      "@surf/render/*": ["packages/render/*"]
    }
  },
  "include": ["stories/**/*", "tests/**/*", "packages/**/*"],
  "exclude": ["node_modules", "dist"]
}
